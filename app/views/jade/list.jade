extends ../layout

block content
    script(src="/js/movieadmin.js")
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 类别
                        th 电影名称
                        th 导演
                        th 国家
                        th 语言
                        th 上映年份
                        th 录入时间
                        th pv
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.category.name}
                            td #{item.title}
                            td #{item.doctor}
                            td #{item.country}
                            td #{item.language}
                            td #{item.year}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td #{item.pv}
                            td: a(target="_blank", href="/movie/#{item._id}")  查看
                            td: a(target="_blank", href="/admin/movie/update/#{item._id}")  更新
                            td: button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
